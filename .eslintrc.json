{
  "env": {
    "browser": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "globals": {
    "$": "readonly",
    "getURLParameter": "readonly"
  },
  "overrides": [
    {
      "files": ["*.test.js"],
      "env": {
        "jest": true
      }
    }
  ],
  "parser": "babel-eslint",
  "rules": {
    "no-console": "off",
    "react/no-find-dom-node": "off",
    "react/no-render-return-value": "off",
    "react/no-string-refs": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
